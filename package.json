{
  "name": "@47ng/badger",
  "version": "0.2.1",
  "description": "Generate badges for GitHub repositories",
  "main": "dist/index.js",
  "license": "MIT",
  "author": {
    "name": "Fran√ßois Best",
    "email": "contact@francoisbest.com",
    "url": "https://francoisbest.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/47ng/badger"
  },
  "keywords": [
    "generator",
    "badges",
    "github"
  ],
  "publishConfig": {
    "access": "public"
  },
  "bin": {
    "badger": "dist/index.js"
  },
  "scripts": {
